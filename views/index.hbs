<div class="modal fade" id="NodeProperty" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-nodeid="0">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="properties_label">Event</h5>
